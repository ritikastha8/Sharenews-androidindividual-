<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bggreen"
    tools:context=".ui.fragment.CategoryFragment">


    <ImageView
        android:id="@+id/darkk"

        android:layout_width="473dp"
        android:layout_height="375dp"
        android:layout_marginBottom="284dp"
        android:src="@drawable/dashboardd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/light"

        android:layout_width="445dp"
        android:layout_height="356dp"
        android:layout_marginBottom="640dp"
        android:src="@drawable/backgroundlight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/btnaddcategory"
        android:layout_width="300dp"
        android:layout_height="101dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="300dp"
        android:backgroundTint="@color/white"
        android:text="Add New Category"
        android:textColor="@color/gg"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnview"
        android:layout_width="300dp"
        android:layout_height="99dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="92dp"
        android:backgroundTint="@color/white"
        android:text="    View Category"
        android:textColor="@color/gg"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnaddcategory" />

    <ImageView
        android:id="@+id/addicon"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="336dp"
        android:src="@drawable/baseline_add_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/eyeicon"
        android:layout_width="30dp"
        android:layout_height="29dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="156dp"
        android:src="@drawable/baseline_remove_red_eye_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addicon" />

    <Button
        android:id="@+id/btnloggout"
        android:layout_width="157dp"
        android:layout_height="76dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="28dp"
        android:backgroundTint="@color/btngreen"
        android:text="Logout"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>