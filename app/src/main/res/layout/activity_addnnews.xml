<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bggreen"
    tools:context=".ui.activity.AddnnewsActivity">

    <ImageView
        android:id="@+id/greenbbg"
        android:layout_width="743dp"
        android:layout_height="753dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="268dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/dashboardd" />

    <Button
        android:id="@+id/btnnbacck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/btngreen"
        android:text="Back"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/greeybox"
        android:layout_width="348dp"
        android:layout_height="552dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="210dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/greyrectangele" />

    <TextView
        android:id="@+id/completee1"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="16dp"
        android:text="Please complete the fields below"
        app:layout_constraintStart_toStartOf="@+id/greenbbg"
        app:layout_constraintTop_toBottomOf="@+id/adddneeew" />

    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/textInputLayout2"
        android:layout_width="290dp"
        android:layout_height="57dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout3">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/categoryname1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Category Name" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnaddnews1"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="64dp"
        android:backgroundTint="@color/green"
        android:text="Add News"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greeybox" />

    <Button
        android:id="@+id/btncanccel"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginEnd="68dp"
        android:backgroundTint="@color/yellow"
        android:text="Cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greeybox" />

    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/textInputLayout3"
        android:layout_width="290dp"
        android:layout_height="57dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="148dp"
        app:layout_constraintStart_toStartOf="@+id/greeybox"
        app:layout_constraintTop_toBottomOf="@+id/completee1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/newsnamme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="News Name" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="350dp"
        android:layout_height="227dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="68dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/reecctangle" />

    <TextView
        android:id="@+id/adddneeew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="76dp"
        android:text="Add News"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />



    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="290dp"
        android:layout_height="200dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/descriptiion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Description" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/imageadd"
        android:layout_width="288dp"
        android:layout_height="143dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adddneeew"
        app:srcCompat="@drawable/iimage" />

