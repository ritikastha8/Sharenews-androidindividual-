<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bggreen"
    tools:context=".ui.fragment.NewsFragment">

    <ImageView
        android:id="@+id/lightt"

        android:layout_width="445dp"
        android:layout_height="356dp"
        android:layout_marginBottom="640dp"
        android:src="@drawable/backgroundlight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/dark"
        android:layout_width="473dp"
        android:layout_height="375dp"
        android:layout_marginBottom="284dp"
        android:src="@drawable/dashboardd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnaddnews"
        android:layout_width="296dp"
        android:layout_height="99dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="304dp"
        android:backgroundTint="@color/white"
        android:text="Add News"
        android:textColor="@color/gg"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnviewnews"
        android:layout_width="296dp"
        android:layout_height="99dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="88dp"
        android:backgroundTint="@color/white"
        android:text="  View News"
        android:textColor="@color/gg"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnaddnews" />


    <ImageView
        android:id="@+id/addiconn"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="336dp"
        android:src="@drawable/baseline_add_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/eyeiconn"
        android:layout_width="30dp"
        android:layout_height="29dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="154dp"
        android:src="@drawable/baseline_remove_red_eye_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addiconn" />

    <Button
        android:id="@+id/logoutbttnn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="28dp"
        android:backgroundTint="@color/btngreen"
        android:text="Logout"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>