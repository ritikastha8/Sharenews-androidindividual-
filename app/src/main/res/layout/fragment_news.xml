<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bggreen"
    tools:context=".ui.fragment.NewsFragment">

    <ImageView
        android:id="@+id/lightt"

        android:layout_width="445dp"
        android:layout_height="356dp"
        android:layout_marginBottom="640dp"
        android:src="@drawable/backgroundlight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/dark"
        android:layout_width="473dp"
        android:layout_height="375dp"
        android:layout_marginBottom="284dp"
        android:src="@drawable/dashboardd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnaddnews"
        android:layout_width="296dp"
        android:layout_height="99dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="168dp"
        android:backgroundTint="@color/white"
        android:text="Add News"
        android:textSize="30sp"
        android:textColor="@color/gg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnviewnews"
        android:layout_width="296dp"
        android:layout_height="99dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="88dp"
        android:backgroundTint="@color/white"
        android:text="  View News"
        android:textColor="@color/gg"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnaddnews" />




    <ImageView
        android:id="@+id/addiconn"
        android:layout_width="74dp"
        android:layout_height="57dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="188dp"
        android:src="@drawable/baseline_add_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/eyeiconn"
        android:layout_width="42dp"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="133dp"
        android:src="@drawable/baseline_remove_red_eye_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addiconn" />


</androidx.constraintlayout.widget.ConstraintLayout>